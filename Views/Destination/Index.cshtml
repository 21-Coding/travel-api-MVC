@{
  Layout = "_Layout";
}

@using TravelApiMVC.Models;
@model List<TravelApiMVC.Models.Destination>;

<h1>Destinations!</h1>

@if (@Model.Count == 0)
{
  <h3>No destinations have been added yet!</h3>
} 

@foreach (Destination destination in Model)
{
  <ul>
    <li>Country: @destination.Country</li>
    <li>City: @destination.City</li>
    <li>Rating: @destination.Rating</li>
  </ul>
}